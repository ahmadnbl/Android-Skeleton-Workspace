<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="8dp"
    app:cardCornerRadius="@dimen/card_corner_radius"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:id="@+id/dialog_generic_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_qtriple"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/dialog_generic_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_double"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/font_large"
            android:visibility="gone"
            tools:text="TEXT SAMPLE GOES HERE"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/dialog_generic_message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_triple"
            android:textColor="@color/black"
            android:textSize="@dimen/font_normal"
            tools:text="TEXT SAMPLE GOES HERE" />

        <Button
            android:id="@+id/dialog_generic_positive_btn"
            style="@style/GenericDialog.ControlBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/generic_dialog_positive_button"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/dialog_generic_negative_btn"
            style="@style/GenericDialog.ControlBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/generic_dialog_negative_button"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>