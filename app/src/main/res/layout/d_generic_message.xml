<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="8dp"
    app:cardCornerRadius="@dimen/card_corner_radius"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_double"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_generic_message_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space"
            android:layout_marginLeft="@dimen/space_double"
            android:layout_marginRight="@dimen/space_double"
            android:layout_marginTop="@dimen/space_triple"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_larger"
            android:textStyle="bold"
            android:textAllCaps="true"
            tools:text="Set your main institution" />

        <TextView
            android:id="@+id/dialog_generic_message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_double"
            android:gravity="center_horizontal"
            tools:text="MESSAGE_HERE"
            android:textColor="@color/black"
            android:textSize="@dimen/font_normal" />

        <Button
            android:id="@+id/dialog_generic_message_close_btn"
            style="@style/GenericDialog.ControlBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/generic_dialog_positive_button"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>